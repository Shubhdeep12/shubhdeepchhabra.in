	"scripts": {
		"dev": "next dev -p 8080",
		"setup-sidecar": "npx @spotlightjs/spotlight",
		"build": "next build",
		"start": "next start",
		"prettier": "prettier --check .",
		"lint": "next lint",
		"check-types": "tsc --pretty --noEmit",
		"check-lint": "eslint . --ext ts --ext tsx --ext js",
		"check-format": "prettier --write .",
		"test-all": "npm run check-format && npm run check-lint && npm run check-types",
		"migrate": "prisma migrate dev --name init",
		"postinstall": "prisma generate",
		"generate": "prisma generate",
		"db:setup": "npm run migrate && npm run generate",
		"mcp:start": "tsx src/mcp-server.ts",
		"mcp:build": "tsc src/mcp-server.ts --outDir dist --module commonjs --target es2020",
		"mcp:test": "npm run mcp:build && node dist/mcp-server.js"
	},
